<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Cadastro</title>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <section id="form">
        <form method="post" action="/cadastro">
          <fieldset>
            <legend>Cadastrar Livro</legend>
            <label for="nome">Nome</label>
            <input type="text" name="nome" required />

            <label for="autor">Autor</label>
            <input type="text" name="autor" required />

            <label for="img">Imagem</label>
            <input type="url" name="img" required />

            <label for="preco">Preço</label>
            <input type="text" name="preco" required />

            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" required />

            <label for="editora">Editora</label>
            <input type="text" name="editora" required />

            <label for="paginas">Numero de Páginas</label>
            <input type="number" name="paginas" required />

            <label for="peso">Peso</label>
            <input type="text" name="peso" required />

            <button onclick="alerta()" type="submit">Cadastrar</button>
            <script>
              function alerta() {
                swal({
                  title: "Olá!",
                  text: "Cadastro realizado com sucesso.",
                  icon: "success",
                });
              }
            </script>
          </fieldset>
        </form>
      </section>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</html>
